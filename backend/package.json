{
  "name": "books-catalog-api",
  "version": "0.0.1",
  "description": "REST API for books catalog project, based on json-server",
  "main": "index.js",
  "scripts": {
    "start:fresh": "json-server books.js --middlewares ./middlewares/add-new-book.js --id isbn",
    "start:static": "json-server --watch db.json --middlewares ./middlewares/add-new-book.js --id isbn"
  },
  "dependencies": {
    "@faker-js/faker": "^8.1.0",
    "formidable": "^3.5.1",
    "json-server": "^0.17.3"
  }
}
