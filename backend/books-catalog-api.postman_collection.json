{
	"info": {
		"_postman_id": "e7918dbe-2d0e-4010-ace3-d3980489024b",
		"name": "Books Catalog API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "137580"
	},
	"item": [
		{
			"name": "Get all books",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{host}}/books?author_like=Mohr",
					"host": [
						"{{host}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "author_like",
							"value": "Mohr"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Filter, Sort & Paginate",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{host}}/books?author_like=e&title_like=b&_sort=title&_order=desc&_page=1&_limit=2",
					"host": [
						"{{host}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "author_like",
							"value": "e"
						},
						{
							"key": "title_like",
							"value": "b"
						},
						{
							"key": "_sort",
							"value": "title"
						},
						{
							"key": "_order",
							"value": "desc"
						},
						{
							"key": "_page",
							"value": "1"
						},
						{
							"key": "_limit",
							"value": "2"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Add new book",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "title",
							"value": "book title",
							"type": "text"
						},
						{
							"key": "description",
							"value": "book description",
							"type": "text"
						},
						{
							"key": "author",
							"value": "book author",
							"type": "text"
						},
						{
							"key": "isbn",
							"value": "978-1-9833-2914-6",
							"type": "text"
						},
						{
							"key": "cover",
							"type": "file",
							"src": "/C:/Users/User/Pictures/nokia.jpg"
						}
					]
				},
				"url": {
					"raw": "{{host}}/books",
					"host": [
						"{{host}}"
					],
					"path": [
						"books"
					]
				}
			},
			"response": []
		},
		{
			"name": "Delete a book",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{host}}/books/666",
					"host": [
						"{{host}}"
					],
					"path": [
						"books",
						"666"
					]
				}
			},
			"response": []
		}
	],
